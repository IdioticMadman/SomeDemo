<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robert.pullrefreshview.MainActivity">

    <com.robert.pullrefreshview.PullRefreshView
        android:id="@+id/refreshView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pColor="@color/colorAccent"
        app:pContentDrawBle="@drawable/ic_launcher_round"
        app:pDragHeight="150dp"
        app:pRadius="15dp"
        app:pTangentAngle="105"
        app:pTargetGravityHeight="4dp"
        app:pTargetWidth="200dp"
        app:pConTentDrawableMargin="3dp"/>

</RelativeLayout>
